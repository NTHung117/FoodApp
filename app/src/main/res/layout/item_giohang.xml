<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_img"
            android:scaleType="centerCrop"
            android:src="@drawable/iconnew_w512"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_giohang_tenSp"
                android:text="Tên Sản Phẩm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="7"
                    android:id="@+id/item_giohang_giaSp"
                    android:layout_marginLeft="10dp"
                    android:text="150000"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/item_giohang_cong"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:id="@+id/item_giohang_soLuong"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/item_giohang_tru"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </ImageView>
                <ImageView
                    android:id="@+id/item_giohang_bang"
                    android:src="@drawable/ic_baseline_drag_handle_24"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:id="@+id/item_giohang_tongTien"
                    android:gravity="center|center_vertical"
                    android:text="20000đ"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <CheckBox
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:id="@+id/item_giohang_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>